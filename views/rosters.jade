doctype html
html
  head
    meta(charset='utf-8')
    title Class Rosters
    meta(name='description', content='My Parse App')
    meta(name='viewport', content='width=device-width')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/rosters.css')
